<h1>Sessions#new</h1>
<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
<% end %>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<%= form_tag do %>
	Please log in:<br />
	<div class="field">
		<%= label_tag :name %>
		<%= text_field_tag :name, params[:name] %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password, params[:password] %>
	</div>
	<div class="btns">
		<%= submit_tag "Login" %>
	</div>
<% end %>